<!DOCTYPE html>
<html>
  <head>
    <title>ColorGrid</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <%= link_to "ColorGrid", root_path, class: "navbar-brand" %>
      <ul class="float-right navbar-nav">
        <li class="nav-item">
          <%= link_to "Dashboard", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Leaderboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><%= current_user.username %></a>
        </li>  
      </ul>
     
    </nav>    
    <div id="main-container">
      <div class="content-wrapper">
        <%= yield %>
      </div>
      <%= javascript_tag do %>
        <%= yield :javascript %>
      <% end %>
    </div>
  </body>
</html>
